<div class="transport">
  <div class="item"><button id="new" class="fa fa-file-text-o"></button></div>
  <div class="item"><button id="save" class="fa fa-floppy-o"></button></div>
  <div class="item"><button id="load" class="fa fa-file-o"></button></div>
  <div class="item"><button id="play" class="fa fa-play"></button></div>
  <div class="item"><button id="play-pattern" class="fa fa-play-circle"></button></div>
  <div class="item"><button id="stop" class="fa fa-stop"></button></div>
  <div class="item"><button id="reset" class="fa fa-step-backward"></button></div>
  <div class="item">
    <div class="range">
      <label for="step">
        Step
      </label>
      <input
        id="step"
        class="range-input"
        value="${data.transport.step}"
        type="text"
      />
    </div>
  </div>
  <div class="item">
    <div class="range">
      <label for="octave">
        Octave
      </label>
      <input
        id="octave"
        class="range-input"
        value="${data.transport.octave}"
        type="text"
      />
    </div>
  </div>
</div>

